<main class="container">

  {{#> FormAuth}}
    {{> FormAuthTitle label="Вход" }}
    <div class="container__auth">
      {{> FormAuthLabel label="Логин"}}
      {{> FormAuthInput type="text" name="login"}}
      {{> FormAuthSpan }}
      {{> FormAuthLabel label="Пароль"}}
      {{> FormAuthInput type="password" name="password"}}
      {{> FormAuthSpan }}
    </div>
    {{> FormAuthButton label="Авторизоваться" type="button" page="list"}}
    {{> FormAuthButton label="Нет аккаунта?" type="link" }}
  {{/FormAuth}}
  
</main>
  