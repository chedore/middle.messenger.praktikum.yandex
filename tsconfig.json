{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "ES2020",
    "declaration": false,
    "module": "ESNext",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/combined.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "dist"
  ]
}
