{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run build && node app.js",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:css:fix": "stylelint '**/*.css' --fix && find . -type f -name '*.css' -exec awk 'END{if(substr($0,length) != \" \") print \" \" >> FILENAME}' {} \\;",
    "lint:css:fix:space": "stylelint '**/*.css' --fix && find . -type f -name '*.css' -exec awk 'END{if(substr($0,length) != \" \") print \" \" >> FILENAME}' {} \\;",
    "type-check": "tsc --noEmit",
    "lint-all": "npm run lint && npm run lint:css && npm run type-check",
    "test": "TS_NODE_FILES=true mocha --es-module-specifier-resolution=node",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/node": "^20.11.24",
    "@types/postcss-import": "^14.0.3",
    "@types/jsdom": "^21.1.6",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.1.0",
    "autoprefixer": "^10.4.18",
    "chai": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "husky": "^8.0.3",
    "jsdom": "^24.0.0",
    "mocha": "^10.4.0",
    "postcss": "^8.4.36",
    "postcss-import": "^16.0.1",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-raw": "^1.0.3",
    "vite-plugin-static-copy": "^1.0.1"
  },
  "dependencies": {
    "express": "^4.18.3",
    "uuid": "^9.0.1"
  }
}
